[Unit]
Description=Reactjs Client Serving Service

[Service]
Type=simple
ExecStart=/root/.nvm/versions/node/v8.10.0/bin/serve -l 5000 -s build
# Required on some systems
#RootDirectory=/home/
WorkingDirectory=/home/mern-vote-ethereum/client
Restart=always
# Restart service after 10 seconds if node service crashes
RestartSec=10
# Output to syslog
StandardOutput=syslog
StandardError=syslog
Environment=PATH=/root/.nvm/versions/node/v8.10.0/bin

[Install]
WantedBy=multi-user.target

